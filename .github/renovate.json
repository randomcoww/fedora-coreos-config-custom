{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "dockerfile": {
    "enabled": false
  },
  "git-submodules": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^.+.repo$/"
      ],
      "matchStrings": [
        "pkgs.k8s.io/core:/stable:/(?<currentValue>[\\w.]+)/rpm"
      ],
      "versioningTemplate": "regex:v(?<major>\\d+)\\.(?<minor>\\d+)",
      "autoReplaceStringTemplate": "pkgs.k8s.io/core:/stable:/v{{{newMajor}}}.{{{newMinor}}}/rpm",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "kubernetes/kubernetes"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "ignoreTests": true,
      "groupName": "minor-update"
    }
  ]
}